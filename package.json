{
  "name": "@djie/eslint-config",
  "type": "module",
  "version": "2.1.6",
  "description": "Anthony's ESLint config",
  "author": "(https://github.com/laihaojie/)",
  "license": "MIT",
  "homepage": "https://github.com/laihaojie/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "stub": "tsup --format esm",
    "dev": "tsup --watch",
    "lint": "pnpm run stub && eslint .",
    "prepack": "nr build",
    "release": "bumpp && pnpm publish --registry=https://registry.npmjs.org/",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": ">=8.40.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.18.1",
    "@antfu/eslint-define-config": "1.23.0-2"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.4",
    "bumpp": "^9.2.0",
    "eslint": "^9.0.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
